<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dimpychhabra.capo.LetsCapo"
    tools:showIn="@layout/app_bar_lets_capo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="Welcome to Let's Capo!"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:gravity="right"
        android:textColor="@color/colorPrimaryText"
        android:text="Here you can Create your own ride and ask your friends to tag along as you earn!"
        android:textSize="40sp"/>

</LinearLayout>
